<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=System.Runtime">
    
    <!-- Main Window -->
    <system:String x:Key="MainWindow.Title">Screenshot Tool</system:String>
    <system:String x:Key="MainWindow.Capture">Capture</system:String>
    <system:String x:Key="MainWindow.ConfigureHotkey">Configure Hotkey</system:String>
    
    <!-- Settings -->
    <system:String x:Key="Settings.Title">Settings</system:String>
    <system:String x:Key="Settings.Language">Language</system:String>
    <system:String x:Key="Settings.Language.English">English</system:String>
    <system:String x:Key="Settings.Language.Chinese">中文</system:String>
    <system:String x:Key="Settings.Hotkey">Hotkey</system:String>
    <system:String x:Key="Settings.Save">Save</system:String>
    <system:String x:Key="Settings.Cancel">Cancel</system:String>
    
    <!-- Messages -->
    <system:String x:Key="Message.SaveSuccess">Save successful</system:String>
    <system:String x:Key="Message.SaveFailed">Save failed</system:String>
    <system:String x:Key="Message.RestartRequired">Application restart required to apply changes</system:String>
</ResourceDictionary>
